<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.liferay.ide.hook.ui.editor.HookXmlEditor"
            default="true"
            icon="icons/e16/hook.png"
            id="com.liferay.ide.eclipse.hook.ui.editor.HookXmlEditor"
            name="%hook.editor.name"
            symbolicFontName="org.eclipse.wst.sse.ui.textfont">
        <contentTypeBinding
               contentTypeId="com.liferay.ide.hook.core.liferayhookxml">
         </contentTypeBinding>
      </editor>
      
   </extension>
     <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.liferay.ide.newWizards"
            name="%category.name">
      </category>
      <wizard
            category="com.liferay.ide.newWizards"
            icon="icons/n16/hook_new.png"
            id="com.liferay.ide.eclipse.portlet.ui.wizard.hook"
            name="%hook.wizard.name">
         <class class="com.liferay.ide.hook.ui.wizard.NewHookWizard">
          <parameter name="liferay_artifact" value="true"/>
            <parameter name="menuIndex" value="20" />
            <parameter name="validProjectTypes" value="portlet,hook" />
         </class>
         <description>
            %wizard.description
         </description>
      </wizard>
   </extension>
     <extension
           point="org.eclipse.ui.commands">
        <category
              id="com.liferay.ide.hook.ui.popupCommands"
              name="Hook Popup Commands">
        </category>
        <command
              categoryId="com.liferay.ide.hook.ui.popupCommands"
              id="com.liferay.ide.hook.ui.customJspsCompareWith"
              name="Compare Custom JSP With Original">
        </command>
     </extension>
     <extension
           point="org.eclipse.ui.menus">
        <menuContribution
              allPopups="true"
              locationURI="menu:compareWithMenu?after=org.eclipse.team.ui.compareLocalHistory">
           <command
                 commandId="com.liferay.ide.hook.ui.customJspsCompareWith"
                 label="Compare Custom JSP With Original"
                 style="push">
           </command>
        </menuContribution>
        <menuContribution
              allPopups="true"
              locationURI="popup:compareWithMenu">
           <command
                 commandId="com.liferay.ide.hook.ui.customJspsCompareWith"
                 label="Compare Custom JSP With Original"
                 style="push">
           </command>
        </menuContribution>
        <menuContribution
              allPopups="true"
              locationURI="menu:compareWithMenu">
           <command
                 commandId="com.liferay.ide.hook.ui.customJspsCompareWith"
                 label="Compare Custom JSP With Original"
                 style="push">
           </command>
        </menuContribution>
     </extension>
     <extension
           point="org.eclipse.ui.handlers">
        <handler
              class="com.liferay.ide.hook.ui.action.CompareCustomJSP"
              commandId="com.liferay.ide.hook.ui.customJspsCompareWith">
        </handler>
     </extension>
</plugin>
