<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.liferay.ide.hook.ui.editor.HookXmlEditor"
            default="true"
            icon="icons/e16/hook.png"
            id="com.liferay.ide.eclipse.hook.ui.editor.HookXmlEditor"
            name="%hook.editor.name"
            symbolicFontName="org.eclipse.wst.sse.ui.textfont">
        <contentTypeBinding
               contentTypeId="com.liferay.ide.hook.core.liferayhookxml">
         </contentTypeBinding>
      </editor>
      
   </extension>
     <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.liferay.ide.newWizards"
            name="%category.name">
      </category>
      <wizard
            category="com.liferay.ide.newWizards"
            icon="icons/n16/hook_new.png"
            id="com.liferay.ide.eclipse.portlet.ui.wizard.hook"
            name="%hook.wizard.name">
         <class class="com.liferay.ide.hook.ui.wizard.NewHookWizard">
          <parameter name="liferay_artifact" value="true"/>
            <parameter name="menuIndex" value="20" />
            <parameter name="validProjectTypes" value="portlet,hook" />
         </class>
         <description>
            %wizard.description
         </description>
      </wizard>
   </extension>
     <extension
           point="org.eclipse.ui.popupMenus">
        <objectContribution
              adaptable="true"
              id="com.liferay.ide.hook.ui.compareWithLiferay"
              objectClass="org.eclipse.core.resources.IFile">
           <menu
                 icon="icons/e16/hook.png"
                 id="liferayHookPopupMenu"
                 label="Liferay Hooks">
              <separator
                    name="slot1">
              </separator>
           </menu>
        </objectContribution>
        <objectContribution
              adaptable="true"
              id="com.liferay.ide.hook.ui.popup.customJspCompare"
              objectClass="org.eclipse.core.resources.IFile">
           <action
                 class="com.liferay.ide.hook.ui.action.CustomJSP"
                 id="com.liferay.ide.hook.ui.compareJspAction"
                 label="Compare With Portal JSP"
                 menubarPath="liferayHookPopupMenu/slot1">
           </action>
           <enablement>
                <adapt type="org.eclipse.core.resources.IFile">
                    <test forcePluginActivation="true"
                        property="com.liferay.ide.hook.ui.isCustomJSPFile"
                        value="true" />
                </adapt>
           </enablement>
        </objectContribution>
     </extension>
     <extension
           point="org.eclipse.core.expressions.propertyTesters">
        <propertyTester
              class="com.liferay.ide.hook.ui.CustomJSPFileTester"
              id="com.liferay.ide.hook.ui.isCustomJSPFile"
              namespace="com.liferay.ide.hook.ui"
              properties="isCustomJSPFile"
              type="org.eclipse.core.resources.IFile">
        </propertyTester>
     </extension>
</plugin>
