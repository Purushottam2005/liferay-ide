<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

  <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="com.liferay.ide.debug.core.fm.FMLineBreakpoint"
            id="com.liferay.ide.debug.core.fm.lineBreakpoint"
            markerType="org.liferay.ide.debug.core.fm.lineBreakpoint.marker"
            name="Freemarker Line Breakpoint">
      </breakpoint>
   </extension>
   <extension
         id="fm.lineBreakpoint.marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
